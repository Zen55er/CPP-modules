NAME	= PmergeMe
SRC		= main.cpp PmergeMe.cpp
CC		= @c++
CFLAGS	= -Wall -Wextra -Werror -pedantic -Wshadow -g -std=c++98
# CFLAGS	= -Wall -Wextra -Werror -pedantic -Wshadow -g -std=c++98 -fsanitize=address,undefined
# FOR DEBUGGER TO SHOW STD::STRING
# CFLAGS	= -Wall -Wextra -Werror -pedantic -Wshadow -g -fno-limit-debug-info -std=c++98 -fsanitize=address,undefined

all:		$(NAME)

$(NAME):	$(SRC)
			$(CC) $(CFLAGS) $(^) -o $(@)
clean:
			@rm -f $(OBJS)

fclean:		clean
			@rm -f $(NAME)

re:			fclean all

test: 	all
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 3 5 9 7 4
		@echo "-------------------------------------------------------------\n"
		./$(NAME) ""
		@echo "-------------------------------------------------------------\n"
		./$(NAME)
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 1 2 3 4 5
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 1 2 3 4 5a
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 3 a s a 3 a
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 2147483647
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 2147483648
		@echo "-------------------------------------------------------------\n"
		./$(NAME) -1
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 0
		@echo "-------------------------------------------------------------\n"
		./$(NAME) 
		@echo "-------------------------------------------------------------\n"
		shuf -i 1-1000 -n 3000 | tr "\n" " " | xargs ./$(NAME)
		@echo "-------------------------------------------------------------\n"
		shuf -i 1-1000 -n 3000 | tr "\n" " " | xargs ./$(NAME)
		@echo "-------------------------------------------------------------\n"
		shuf -i 1-1000 -n 3000 | tr "\n" " " | xargs ./$(NAME)
		@echo "-------------------------------------------------------------\n"
		shuf -i 1-1000 -n 3000 | tr "\n" " " | xargs ./$(NAME)
		@echo "-------------------------------------------------------------\n"
		shuf -i 1-1000 -n 3000 | tr "\n" " " | xargs ./$(NAME)

.PHONY:		all clean re fclean